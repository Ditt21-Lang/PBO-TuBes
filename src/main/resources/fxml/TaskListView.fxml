<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="20.0" styleClass="main-content" 
      xmlns="http://javafx.com/javafx/21" 
      xmlns:fx="http://javafx.com/fxml/1" 
      fx:controller="com.pomodone.view.TaskListController">

    <VBox spacing="8.0">
        <VBox spacing="4.0">
            <Label styleClass="header-title" text="Tasks"/>
            <Label styleClass="header-subtitle" text="Manage your daily goals."/>
        </VBox>
        <TextField fx:id="taskSearchField" promptText="Search tasks..." styleClass="search-field" />
    </VBox>

    <HBox spacing="20.0" VBox.vgrow="ALWAYS">
        
        <StackPane styleClass="task-card" prefWidth="580.0" prefHeight="600.0" HBox.hgrow="ALWAYS">
            <VBox spacing="12.0">
                 <padding>
                    <Insets top="20" right="20" bottom="20" left="20"/>
                 </padding>
                 
                 <HBox alignment="CENTER_LEFT" spacing="8.0">
                     <Label styleClass="task-card-header" text="My List"/>
                     <Region HBox.hgrow="ALWAYS"/>
                     <Button fx:id="addTaskButton" text="+ New Task" styleClass="primary-cta"/>
                     <Button fx:id="viewSettingsButton" text="⇅" styleClass="sort-button"/>
                 </HBox>

                 <ListView fx:id="taskListView" styleClass="task-list" VBox.vgrow="ALWAYS"/>
            </VBox>

            <VBox fx:id="filterPanel" spacing="10.0" visible="false" managed="false"
                  styleClass="floating-panel" StackPane.alignment="TOP_RIGHT">
                <StackPane.margin>
                    <Insets top="12" right="12" />
                </StackPane.margin>
                <HBox alignment="CENTER_LEFT" spacing="6.0">
                    <Label text="View settings" styleClass="floating-title"/>
                    <Region HBox.hgrow="ALWAYS"/>
                    <Button fx:id="closeFilterPanelButton" text="X" styleClass="ghost-icon-button"/>
                </HBox>
                <VBox spacing="8.0">
                    <Label text="Sort by" styleClass="floating-title"/>
                    <RadioButton fx:id="sortNameAscRadio" text="Name: A to Z" />
                    <RadioButton fx:id="sortNameDescRadio" text="Name: Z to A" />
                    <RadioButton fx:id="sortDueSoonRadio" text="Due: Soonest" />
                    <RadioButton fx:id="sortDueLateRadio" text="Due: Latest" />
                    <RadioButton fx:id="sortDifficultyAscRadio" text="Difficulty: Low to High" />
                    <RadioButton fx:id="sortDifficultyDescRadio" text="Difficulty: High to Low" />
                </VBox>
                <Separator/>
                <VBox spacing="8.0">
                    <Label text="Status filter" styleClass="floating-title"/>
                    <CheckBox fx:id="pendingCheckBox" text="Open" styleClass="pill-checkbox"/>
                    <CheckBox fx:id="overdueCheckBox" text="Overdue" styleClass="pill-checkbox"/>
                    <CheckBox fx:id="doneCheckBox" text="Done" styleClass="pill-checkbox"/>
                    <Label text="Default: Open + Overdue" styleClass="helper-text"/>
                </VBox>
            </VBox>
        </StackPane>

        <VBox fx:id="detailContainer" styleClass="task-card" spacing="16.0" prefHeight="600.0" HBox.hgrow="ALWAYS" visible="false">
            <padding>
                <Insets top="30" right="30" bottom="30" left="30"/>
            </padding>

            <VBox spacing="8.0">
                <Label fx:id="detailTitleLabel" styleClass="header-title" style="-fx-font-size: 24px;" wrapText="true" text="Task Title"/>
                
                <HBox spacing="10.0" alignment="CENTER_LEFT">
                    <Label fx:id="detailStatusLabel" style="-fx-text-fill: -color-accent; -fx-font-weight: bold; -fx-font-size: 13px;" text="IN_PROGRESS"/>
                    <Label text="•" style="-fx-text-fill: -color-text-muted;"/>
                    <Label text="Due date:" style="-fx-text-fill: -color-text-muted; -fx-font-size: 13px;"/>
                    <Label fx:id="detailDeadlineLabel" style="-fx-text-fill: -color-text-dark; -fx-font-size: 13px;" text="20 Oct 2024"/>
                </HBox>
            </VBox>

            <Separator opacity="0.5"/>

            <VBox spacing="8.0" VBox.vgrow="ALWAYS">
                <Label styleClass="settings-label" text="Description"/>
                <TextArea fx:id="detailDescriptionArea" styleClass="settings-field" editable="false" wrapText="true" VBox.vgrow="ALWAYS"/>
            </VBox>

            <!-- Action Buttons -->
            <HBox spacing="12.0" alignment="CENTER_RIGHT">
                <Button fx:id="markDoneButton" text="Mark as done" styleClass="primary-cta"/>
                <Button fx:id="editTaskButton" text="Edit Task" styleClass="primary-cta"/>
                <Button fx:id="deleteTaskButton" text="Delete" styleClass="danger-button"/>
            </HBox>

        </VBox>

    </HBox>
</VBox>
